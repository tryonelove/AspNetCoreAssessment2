@model AspNetCoreAssessment2.Web.Models.RegisterViewModel


<h2>Sign up</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group row">
        <label class="col-2 col-form-label" asp-for="FullName"></label><br/>
        <div class="col-sm-10">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input class="form-control" asp-for="FullName"/><br/>
            <small class="text-danger">
                <span asp-validation-for="FullName"></span>
            </small>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label" asp-for="Email"></label><br/>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email"/><br/>
            <small class="text-danger">
                <span asp-validation-for="Email"></span>
            </small>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label" asp-for="Password"></label><br/>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password"/><br/>
            <small class="text-danger">
                <span asp-validation-for="Password"></span>
            </small>
        </div>
    </div>
  <div class="form-group row">
    <div class="col-sm-2">Have you read the rules?</div>
    <div class="col-sm-10">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="HasReadRules">
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>
</form>
@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}