@model AspNetCoreAssessment2.Web.Models.LoginViewModel

<h2>Sign In</h2>
<form method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Login"></label><br/>
        <input asp-for="Login" /><br />
        <span class="text-danger" asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br/>
        <input asp-for="Password"/><br/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ShouldRemember"></label>
        <input asp-for="ShouldRemember"/>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Sign In"/>
        <a class="btn btn-secondary" role="button" asp-controller="Account" asp-action="Register">Sign Up</a>
    </div>
</form>